.container {
  width: 100vw;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.image-container {
  width: 80%;
  height: 300px;
  margin: 50px auto;
  background-color: white;
  border-radius: 40px;
  position: relative;
}

.image {
  width: 100%;
  height: 100%;
  border-radius: 40px;
}

.close-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  cursor: pointer;
  font-size: 30px;
  color: red;
}